.container {
  height: 100%;
  width: 100%;

  Scroll {
    width: 100%;
    height: 100%;

    .friends {
      margin-top: 5;
      width: 100%;
      height: fit-content;
    }

    Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-left: 5;
    }
  }

  .error-component {
    font-size: 0.8;
    width: fit-content;
    margin-top: 100;
    alignment-x: center;
    alignment-y: center;
  }
}

Friend, FriendlistFriend {
  width: 100%;
  height: 20;
  padding: 1;

  .player-head {
    margin-left: 3;
    width: 16;
    height: width;
  }

  .username-component {
    max-width: 80%;
    width: fit-content;
    scale-to-fit: true;
    max-lines: 1;
    margin-left: 2;
    top: 2;
  }

  .buttons {
    height: fit-content;
    width: fit-content;
    alignment: right;

    Button {
      width: 20;
      height: width;
      padding: 0;
    }

    .pin-button {
      .button-icon {
        width: 50%;
        height: width;
      }
    }
  }
}